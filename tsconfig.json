{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "es6"
    ],
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "dist/**/*", 
    "scripts/**/*",
    "src/debug/**/*",
    "node_modules/**/*",
    "test/**/*",
  ],
  "ts-node": {
    "esm": true,
    "experimentalResolver": true,
    "compilerOptions": {
      "module": "es6"
    }
  },
}
