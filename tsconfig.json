{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "es6"
    ],
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist/**/*", 
    "scripts/**/*",
    "node_modules/**/*",
    "test/**/*",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ES6"
    }
  },
}
