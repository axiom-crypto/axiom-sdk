{
    "extends": "@tsconfig/node18/tsconfig.json",
    "ts-node": {
        "swc": true,
        "esm": true,
        "experimentalResolver": true
    },
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "dist/**/*", 
        "scripts/**/*",
        "src/debug/**/*",
        "node_modules/**/*",
        "test/**/*",
    ]
}